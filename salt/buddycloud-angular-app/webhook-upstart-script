description "buddycloud-angular-app-webhook-deployer"

respawn
respawn limit 10 5

start on runlevel [2345]
stop on runlevel [!2345]

setuid nobody
setgid nogroup

script
  /usr/bin/webhook-deployer --configfile /opt/buddycloud-angular-app-webhook-deployer/webhook-deployer.conf >> /var/log/buddycloud-angular-app-webhook-deployer.log 2>&1
end script

post-start script
   echo "buddycloud-angular-app-webhook-deployer"
end script
